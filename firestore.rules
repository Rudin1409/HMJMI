
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'divisions' collection.
    // Public read, authenticated write.
    match /divisions/{divisionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Rules for the 'berita_acara' (news/events) collection.
    // Public read for single documents (get) and lists (list). Authenticated write.
    match /berita_acara/{beritaAcaraId} {
      allow get: if true;
      allow list: if true;
      allow write: if isSignedIn();
    }

    // Rules for the 'users' collection.
    // Authenticated users can read their own profile and list all users.
    // Only they can write to their own profile.
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow write: if isSignedIn();
    }
  }
}
