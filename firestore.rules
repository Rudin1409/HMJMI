
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'divisions' collection
    match /divisions/{divisionId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Rules for the 'berita_acara' collection
    match /berita_acara/{beritaAcaraId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Rules for the 'users' collection
    // An individual user can only write to their own document.
    // Reading other user profiles is allowed for signed-in users.
    match /users/{userId} {
      allow get: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    match /users {
      allow list: if isSignedIn();
    }
  }
}
